generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  moduleFormat = "commonjs"
}



datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}



// ENUMS

enum StatusUsuario {
  ATIVO
  INATIVO
}

enum TipoConteudo {
  SERIE
  FILME
}


enum Genero {
  ACAO
  AVENTURA
  COMEDIA
  DRAMA
  FICCAO_CIENTIFICA
  TERROR
  ROMANCE
  ANIMACAO
  DOCUMENTARIO
  SUSPENSE
  FANTASIA
}

// MODELO: USUARIO


model Usuario {
  id             String   @id @default(uuid()) @db.Uuid
  username       String   @unique
  email          String   @unique
  senha          String
  nomeCompleto   String
  dataNascimento DateTime
  fotoPerfil     String?
  dataCriacao    DateTime @default(now())
  ultimoLogin    DateTime?
  status         StatusUsuario @default(ATIVO)

  favoritos      Favorito[]

  @@map("usuarios")
}


// MODELO: CONTEUDO (BASE)


model Conteudo {
  id             String   @id @default(uuid()) @db.Uuid
  titulo         String
  banner         String?
  poster         String?
  genero         Genero[]
  sinopse        String?
  dataLancamento DateTime?
  classificacao  String?
  destaque       Boolean      @default(false)
  tipo           TipoConteudo

  serie          Serie?
  filme          Filme?

  favoritos      Favorito[]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("conteudos")
  @@index([titulo])
}


// MODELO: SERIE (ESPECIALIZAÇÃO)


model Serie {
  conteudoId  String   @id @db.Uuid

  conteudo    Conteudo @relation(fields: [conteudoId], references: [id], onDelete: Cascade)
  episodios   Episodio[]

  @@map("series")
}

// MODELO: FILME (ESPECIALIZAÇÃO)


model Filme {
  conteudoId   String   @id @db.Uuid
  duracaoTotal Int

  conteudo     Conteudo @relation(fields: [conteudoId], references: [id], onDelete: Cascade)

  @@map("filmes")
}


// MODELO: EPISODIO


model Episodio {
  id              Int     @id @default(autoincrement())
  titulo          String
  numeroTemporada Int
  numeroEpisodio  Int
  duracao         Int

  serieId         String  @db.Uuid
  serie           Serie   @relation(fields: [serieId], references: [conteudoId], onDelete: Cascade)

  @@map("episodios")
  @@unique([serieId, numeroTemporada, numeroEpisodio])
  @@index([serieId])
}

// ===============================
// MODELO: FAVORITO
// ===============================

model Favorito {
  usuarioId  String   @db.Uuid
  conteudoId String   @db.Uuid

  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  conteudo   Conteudo @relation(fields: [conteudoId], references: [id])

  createdAt  DateTime @default(now())

  @@id([usuarioId, conteudoId])
  @@map("favoritos")
}
