generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}



datasource db {
  provider = "postgresql"
}



// ENUMS

enum StatusUsuario {
  ATIVO
  INATIVO
}

enum TipoConteudo {
  SERIE
  FILME
}

// MODELO: USUARIO


model Usuario {
  id             String   @id
  username       String   @unique
  email          String   @unique
  senha          String
  nomeCompleto   String
  dataNascimento DateTime
  fotoPerfil     String?
  dataCriacao    DateTime @default(now())
  ultimoLogin    DateTime?
  status         StatusUsuario

  favoritos      Favorito[]

  @@map("usuarios")
}


// MODELO: CONTEUDO (BASE)


model Conteudo {
  id             String   @id
  nome           String
  banner         String
  poster         String
  genero         String
  sinopse        String
  dataLancamento DateTime
  classificacao  String
  destaque       Boolean
  tipo           TipoConteudo

  serie          Serie?
  filme          Filme?

  favoritos      Favorito[]

  @@map("conteudos")
}


// MODELO: SERIE (ESPECIALIZAÇÃO)


model Serie {
  conteudoId  String   @id
  programacao String?

  conteudo    Conteudo @relation(fields: [conteudoId], references: [id])
  episodios   Episodio[]

  @@map("series")
}

// MODELO: FILME (ESPECIALIZAÇÃO)


model Filme {
  conteudoId   String   @id
  duracaoTotal Int
  diretor      String
  elenco       String[]

  conteudo     Conteudo @relation(fields: [conteudoId], references: [id])

  @@map("filmes")
}


// MODELO: EPISODIO


model Episodio {
  id              Int     @id @default(autoincrement())
  titulo          String
  numeroTemporada Int
  numeroEpisodio  Int
  duracao         Int

  serieId         String
  serie           Serie   @relation(fields: [serieId], references: [conteudoId])

  @@map("episodios")
}

// ===============================
// MODELO: FAVORITO
// ===============================

model Favorito {
  id         Int      @id @default(autoincrement())
  usuarioId  String
  conteudoId String

  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  conteudo   Conteudo @relation(fields: [conteudoId], references: [id])

  @@unique([usuarioId, conteudoId])
  @@map("favoritos")
}
